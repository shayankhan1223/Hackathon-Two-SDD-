# PostgreSQL connection string (Neon serverless)
# Format: postgresql+asyncpg://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@your-neon-host.neon.tech/dbname?sslmode=require

# === Optional (defaults shown) ===

# Kubernetes namespace for deployment
NAMESPACE=hackathon-dev

# Docker image tags
BACKEND_IMAGE=hackathon-todo-backend:1.0.0
FRONTEND_IMAGE=hackathon-todo-frontend:1.0.0

# Minikube cluster resources
MINIKUBE_CPUS=2
MINIKUBE_MEMORY=2048

# Helm release name
RELEASE_NAME=todo-chatbot

# Application ports
BACKEND_PORT=7860
FRONTEND_PORT=3000

# NodePort exposure
BACKEND_NODEPORT=30860
FRONTEND_NODEPORT=30080

# Node environment
NODE_ENV=development
